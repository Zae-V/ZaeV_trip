<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.WithdrawalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/notosans_bold"
                android:textColor="#000000"
                android:text="탈퇴 인증이 필요합니다!"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탈퇴를 진행하기 위해서 가입 방법에 \n따라 인증을 진행합니다.\n인증을 완료해주세요."/>

            <android.widget.Button
                android:id="@+id/kakaoCertificationBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/notosans_bold"
                android:text="카카오톡 계정 인증"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:background="@drawable/rounded_shape"
                android:layout_marginTop="45dp"/>

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 이메일"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_marginTop="45dp"/>

            <EditText
                android:id="@+id/editID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/round_gray_edittxt"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/passwordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 비밀번호"
                android:textColor="#000000"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/editPW"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/round_gray_edittxt"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/errorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF6347"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                />


            <android.widget.Button
                android:id="@+id/signInBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/notosans_bold"
                android:text="로그인 하기"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:background="@drawable/rounded_shape"
                android:layout_marginTop="45dp"/>


            <android.widget.Button
                android:id="@+id/withdrawalBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/notosans_bold"
                android:text="탈퇴"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:background="@drawable/rounded_gray"
                android:layout_marginTop="5dp"
                android:enabled="false"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>